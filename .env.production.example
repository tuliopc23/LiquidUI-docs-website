# OSS Production Environment Configuration

# Core Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://liquidify-docs.vercel.app
NEXT_PUBLIC_APP_VERSION=2.0.0

# Free Analytics & Monitoring (OSS-friendly)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=  # Free tier: 2,500 events/month
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=  # Free: unlimited
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=     # Privacy-focused alternative

# Free Error Monitoring
SENTRY_DSN=                       # Free tier: 5,000 errors/month
SENTRY_ORG=
SENTRY_PROJECT=

# Performance Monitoring (Free tiers)
NEXT_PUBLIC_WEB_VITALS_ENDPOINT=  # Custom endpoint or Vercel Speed Insights
LIGHTHOUSE_CI_TOKEN=              # Free with GitHub Actions

# Security (Self-hosted/Free)
NEXT_PUBLIC_CSP_NONCE=
GITHUB_TOKEN=                     # For security scanning

# OSS Community Features
NEXT_PUBLIC_GITHUB_REPO=https://github.com/tuliopc23/Liquidify-docs
NEXT_PUBLIC_DISCORD_INVITE=       # Community support
NEXT_PUBLIC_ENABLE_FEEDBACK=true  # GitHub Issues integration

# Feature Flags (Simple boolean flags)
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES=true

# Component Library
NEXT_PUBLIC_LIQUIDIFY_VERSION=1.0.27
NEXT_PUBLIC_DOCS_VERSION=2.0.0

# OSS Metrics
NEXT_PUBLIC_NPM_PACKAGE_NAME=liquidify
NEXT_PUBLIC_SHOW_DOWNLOAD_STATS=true
