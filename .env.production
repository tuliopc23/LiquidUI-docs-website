# Production Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Core Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://liquidify-docs.vercel.app
NEXT_PUBLIC_APP_VERSION=2.0.0

# Analytics & Monitoring (Free Tiers)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=       # Vercel Analytics: Free 2,500 events/month
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=       # Google Analytics: Free unlimited
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=          # Plausible: Privacy-focused alternative
GOOGLE_SITE_VERIFICATION=              # Google Search Console verification

# Error Monitoring (Free Tier)
SENTRY_DSN=                           # Sentry: Free 5,000 errors/month
SENTRY_ORG=                           # Your Sentry organization
SENTRY_PROJECT=                       # Your Sentry project name

# Performance Monitoring
NEXT_PUBLIC_WEB_VITALS_ENDPOINT=      # Custom Web Vitals endpoint
LIGHTHOUSE_CI_TOKEN=                   # Lighthouse CI token for GitHub Actions

# Security
NEXT_PUBLIC_CSP_NONCE=                # Content Security Policy nonce
GITHUB_TOKEN=                         # GitHub token for security scanning

# OSS Community Features
NEXT_PUBLIC_GITHUB_REPO=https://github.com/tuliopc23/Liquidify-docs
NEXT_PUBLIC_DISCORD_INVITE=           # Discord community invite link
NEXT_PUBLIC_ENABLE_FEEDBACK=true      # Enable community feedback widget

# Feature Flags
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES=true

# Component Library Info
NEXT_PUBLIC_LIQUIDIFY_VERSION=1.0.27
NEXT_PUBLIC_DOCS_VERSION=2.0.0
NEXT_PUBLIC_NPM_PACKAGE_NAME=liquidify
NEXT_PUBLIC_SHOW_DOWNLOAD_STATS=true

# Deployment (Vercel)
VERCEL_TOKEN=                         # Vercel deployment token
VERCEL_ORG_ID=                        # Vercel organization ID
VERCEL_PROJECT_ID=                    # Vercel project ID

# CI/CD (GitHub Actions)
DISCORD_WEBHOOK=                      # Discord webhook for deployment notifications
