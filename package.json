{
  "name": "liquidify-docs-website",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "Documentation site for Liquidify component library - Modern Nextra v4 + App Router",
  "homepage": "https://liquidify-docs.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuliopc23/Liquidify-docs.git"
  },
  "bugs": {
    "url": "https://github.com/tuliopc23/Liquidify-docs/issues"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:analyze": "ANALYZE=true next build",
    "lighthouse": "lhci autorun",
    "a11y-test": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "a11y:report": "node scripts/build-with-accessibility.js",
    "build:accessibility": "node scripts/build-with-accessibility.js",
    "test:accessibility": "jest --testNamePattern=accessibility",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:all": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",

    "build:production": "npm run test:all && npm run build",
    "preview": "npm run build && npm run start",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "security-audit": "npm audit --audit-level=high",
    "dependency-check": "npm outdated",
    "clean": "rm -rf .next out coverage node_modules/.cache",
    "clean:install": "npm run clean && npm install",
    "postbuild": "next-sitemap",
    "precommit": "npm run lint && npm run test",
    "release:patch": "npm version patch && git push --tags",
    "release:minor": "npm version minor && git push --tags",
    "release:major": "npm version major && git push --tags"
  },
  "keywords": [
    "liquidify",
    "component-library",
    "documentation",
    "react",
    "ui",
    "glassmorphism",
    "nextra",
    "app-router",
    "typescript",
    "tailwindcss"
  ],
  "author": "Tulio Pinheiro Cunha",
  "license": "MIT",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.0",
    "gsap": "^3.13.0",
    "liquidify": "^1.0.27",
    "lucide-react": "^0.525.0",
    "mermaid": "^11.8.1",
    "next": "^15.4.0",
    "next-themes": "^0.4.6",
    "nextra": "^4.2.17",
    "nextra-theme-docs": "^4.2.17",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-emoji": "^5.0.1",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@lhci/cli": "^0.15.1",
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "@next/bundle-analyzer": "^15.3.5",
    "@playwright/test": "^1.48.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.10.3",
    "canvas": "^3.1.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "lighthouse": "^12.7.1",
    "pa11y-ci": "^2.4.2",
    "postcss": "^8.4.0",
    "remark-mermaidjs": "^7.0.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0"
  }
}
